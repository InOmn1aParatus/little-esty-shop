<%= render 'admin/dashboard/admin_nav' %>

<br><hr><br>

<h2>Top 5 Customers</h2>
<section id="top_five">
<% @top_five_customers.each do |customer| %>
  <p><%= customer.first_name %><%= customer.last_name %> - with <%= customer.successful_transactions %> transactions </p>
<% end %>
</section>

<br><hr><br>

<h2>Incomplete Invoices</h2>
<section id="incomplete_invoices">
  <% @incomplete_invoices.each do |invoice| %>
    <p>ID: <%= link_to "#{invoice.id}", admin_invoice_path(invoice.id) %> - Date: <%= invoice.created_at_display %></p>
  <% end %>
</section>
