<h2>Edit <%= @item.name %></h2>

<%= form_with url: merchant_item_path(@merchant, @item), method: :patch, local: true do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name, value: "#{@item.name}" %>
  <%= f.label :description, 'Description: ' %>
  <%= f.text_field :description, value: "#{@item.description}" %>
  <%= f.label :unit_price, 'Current Selling Price: ' %>
  <%= f.text_field :unit_price, value: "#{@item.unit_price_dollars}" %>
  <%= f.submit 'Submit' %>
<% end %>
