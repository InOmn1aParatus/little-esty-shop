<%= form_with model: [@merchant, @item], local: true do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name %>
  <%= f.label :description, 'Description: ' %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, 'Current Selling Price: ' %>
  <%= f.text_field :unit_price, :value => (number_to_currency(f.object.unit_price.to_f/100)) %>
  <%= f.submit button_name %>
<% end %>
