<h2>New Item</h2>

<%= form_with url: merchant_items_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name %>
  <%= f.label :description, 'Description: ' %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, 'Current Selling Price: ' %>
  <%= f.text_field :unit_price %>
  <%= f.submit 'Submit' %>
<% end %>
