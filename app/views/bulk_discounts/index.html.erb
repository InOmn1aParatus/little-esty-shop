<%= render 'dashboard/merch_nav' %>

<h3>My Discounts</h3>

<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %>

<% @merchant.bulk_discounts.each do |discount| %>
  <h4>ID: <%= link_to "#{discount.id}", merchant_bulk_discount_path(@merchant, discount) %></h4>
  <p>Percent Discount: <%= discount.pct_discount %>%</p>
  <p>Quantity Threshold: <%= discount.qty_threshold %> Units</p>
<% end %>

<hr><br>

<h4><u>Upcoming Holidays</u></h4>

<section id="holidays">
<% @holidays.each do |holiday| %>
  <p><%= holiday.name %></p>
  <p><%= holiday.date %></p>
  <br>
<% end %>
</section>