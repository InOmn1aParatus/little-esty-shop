<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>Little Esty Shop</header>
    <%= GithubService.repo_info[:name] %>
    <% hash = Hash.new(0) %>
    <% GithubService.pulls_info.each do |pull| %>
      <% hash[pull[:user][:login]] += 1 %>
    <% end %>

    <h2>Contributors</h2>
    <% GithubService.contributor_info.each do |contributor| %>
      <%= contributor[:login] %> Commits: <%= contributor[:contributions] %> Pulls: <%= hash[contributor[:login]] %><br>
    <% end %>
    <h4>Total Pull Requests: <%= hash.values.sum %></h4>
    <%= yield %>
  </body>
</html>
